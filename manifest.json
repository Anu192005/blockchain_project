{
  "manifest_version": 3,
  "name": "My Crypto Wallet",
  "version": "1.0",
  "description": "Ethereum & Solana Wallet Extension",
  "permissions": ["storage", "tabs", "activeTab"],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
      }
  },
  "host_permissions": ["<all_urls>"],
  "background": {
      "service_worker": "background.js"
  },
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  }
}
